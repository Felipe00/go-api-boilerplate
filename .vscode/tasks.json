{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "run",
			"key": "shift+cmd+r",
			"type": "shell",
			"command": "go run *.go",
			"problemMatcher": [
				"$go"
			]
		},
		{
			"taskName": "build",
			"type": "shell",
			"command": "go build *.go",
			"problemMatcher": [
				"$go"
			]
		}
	]
}